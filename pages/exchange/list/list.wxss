page {
  background: #f2f2f2
}

.item {
  background: white;
  margin: 12px;
  padding: 20px;
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 22px;
  flex: 2;
}

.buy {
  color: green;
  flex: 1;
  text-align: center;
}

.sell {
  color: #f60;
  flex: 1;
  text-align: center;
}

.datetime {
  color: #aaa;
  font-size: 14px;
  text-align: center;
  margin: 10px 0;
}
