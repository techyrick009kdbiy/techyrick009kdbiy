/* 全局背景 */
page {
  background: #F1F1F7;
  padding: 8px;
  box-sizing: border-box;
}

/* 组头 */
.section-header {
  color: #ACACAC;
  font-size: 12px;
  margin: 14px;
}

/* 组体 */
.section-body {
  border-radius: 10px;
  box-shadow: 0px 0px 5px 3px #eee;
  background-color: white;
  margin: 5px;
  padding: 5px;
}

/* 主体黑色 */
.dark {
  color: #171717;
}

/* 高亮蓝色 */
.blue {
  color: #0781DC;
}

.city {
  margin: 10px 20px;
  line-height: 2;
}