<view class="main">
  <input type="text" name="title" value="" class="add" placeholder="请输入记录内容" confirm-type="done" placeholder-class="input-placeholder" auto-focus bindconfirm="add" />
  <checkbox-group bindchange="checkboxChange">
    <label wx:for="{{todos}}" class="list" wx:key="">
      <checkbox value="{{index}}" checked="{{item.checked}}" />
      <view class="item">
        <!-- <view bindtap="editing" data-index="{{index}}" wx:if="{{currentIndex !== index && !editing}}">{{item.title}}</view> -->
        <input name="editor" catchtap="editing" data-index="{{index}}" value="{{item.title}}" disabled="{{currentIndex !== index}}" focus="{{currentIndex === index}}" class="black {{currentIndex !== index ? 'input-disabled' : 'input-enabled'}}" bindconfirm="edit" bindblur="bindblur" />
      </view>
    </label>
  </checkbox-group>
</view>
<view class="delete-all">
  <button type="warn" class="delete-all" bindtap="deleteAll">删除</button>
</view>